 {{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}
 {{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container">
    <div><h1 class="glow">Eat-Da-Burger!</h1></div>

    <div class="row justify-content-center">
        <div class="col-5">
            <ul id="burgers-to-devour" class="shadow-lg p-2 rounded devoured-div">
                <h3>Burgers to Devour!</h3>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{burger_name}} 
                        <button class="change-eat btn btn-danger btn-sm" data-id="{{id}}" data-neweat="true">Devour it!</button>
                        
                        <button class="delete-burger btn btn-dark btn-sm" data-id="{{this.id}}">X</button>
                        </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-5">
            <ul id="burgers-devoured" class="shadow-lg p-2 rounded devoured-div">
                <h3>Burgers Devoured!</h3>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}
                        <button class="delete-burger btn btn-dark btn-sm" data-id="{{this.id}}">X</button>
                    </p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="burger-input">

        <form action="/api/burgers" method="POST">
            <textarea type="text" name="burger" id="burger-input" class="shadow-lg col-md-3 rounded" placeholder="Burger Name"></textarea>
            <p>Enter a burger you want to eat, then click the "Add Burger" button.</p>
            <button type="submit" id="add-burger" class="shadow-lg btn btn-info text-light btn-lg">Add Burger</button>
        </form>
    </div>

</div>
