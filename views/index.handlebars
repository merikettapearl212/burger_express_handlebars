 {{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}
 {{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container-flex">
    <div><h1 class="glow">Eat-Da-Burger!</h1></div>

    <div class="row d-flex burger-div">
        <div class="col">
            <ul id="burgers-to-devour">
                <h3>Burgers to Devour!</h3>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{burger_name}} 
                        <button class="devour btn btn-danger btn-sm" data-burgerid="{{id}}">Devour it!</button>
                        </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <ul id="burgers-devoured">
                <h3>Burgers Devoured!</h3>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="burger-input">

        <form action="/api/burgers" method="POST">
            <textarea type="text" name="burger" id="burger-input" class="shadow-lg col-md-3 rounded" placeholder="Burger Name"></textarea>
            <p>Enter a burger you want to eat, then click the "Add Burger" button.</p>
            <button type="submit" id="add-burger" class="shadow-lg btn btn-info text-light btn-lg">Add Burger</button>
        </form>
    </div>

</div>